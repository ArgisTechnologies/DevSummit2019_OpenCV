<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity">

    <include layout="@layout/leftnavigation" />

    <LinearLayout
        android:id="@+id/layout_rightpane"
        android:layout_width="@dimen/weight_ratio"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/rightContent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="HELP"
            android:textSize="@dimen/contextTitleSize" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_training_videos"
                        android:layout_width="@dimen/weight_ratio"
                        android:layout_height="@dimen/mediumButtonHeight"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:padding="7dp"
                        android:text="TRAINING VIDEOS"
                        android:textSize="@dimen/xsmallTextSize" />

                    <Button
                        android:id="@+id/button_legal_notices"
                        android:layout_width="@dimen/weight_ratio"
                        android:layout_height="@dimen/mediumButtonHeight"
                        android:layout_column="2"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:padding="7dp"
                        android:text="LEGAL NOTICES"
                        android:textSize="@dimen/xsmallTextSize" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/button_quick_start"
                        android:layout_width="@dimen/weight_ratio"
                        android:layout_height="@dimen/mediumButtonHeight"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:padding="7dp"
                        android:text="QUICK START GUIDE"
                        android:textSize="@dimen/xsmallTextSize" />

                    <Button
                        android:id="@+id/button_warranty"
                        android:layout_width="@dimen/weight_ratio"
                        android:layout_height="@dimen/mediumButtonHeight"
                        android:layout_column="2"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:padding="7dp"
                        android:text="WARRANTY INFO"
                        android:textSize="@dimen/xsmallTextSize" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/button_instructions"
                        android:layout_width="@dimen/weight_ratio"
                        android:layout_height="@dimen/mediumButtonHeight"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:padding="7dp"
                        android:text="INSTRUCTIONS FOR USE"
                        android:textSize="@dimen/xsmallTextSize" />

                    <Button
                        android:id="@+id/button_updates"
                        android:layout_width="@dimen/weight_ratio"
                        android:layout_height="@dimen/mediumButtonHeight"
                        android:layout_column="2"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:padding="7dp"
                        android:text="CHECK FOR SOFTWARE UPDATES"
                        android:textSize="@dimen/xsmallTextSize" />


                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>