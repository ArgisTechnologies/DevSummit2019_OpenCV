<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_leftpane"
    android:layout_width="@dimen/weight_ratio"
    android:layout_height="match_parent"
    android:layout_weight="0.30"
    android:background="@color/leftPane"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button_selector" />

        <TextView
            android:id="@+id/textview_label_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="BACK" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_label_home_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="HOME"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_button_selector" />

        <TextView
            android:id="@+id/textview_label_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="HOME" />

    </LinearLayout>

</RelativeLayout>

