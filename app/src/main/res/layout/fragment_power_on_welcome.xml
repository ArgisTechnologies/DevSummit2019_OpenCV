<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rightContent"
    android:id="@+id/fragment_power_on_welcome"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="WELCOME!"
        android:textSize="@dimen/contextTitleSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_start_tour"
                android:layout_width="@dimen/weight_ratio"
                android:layout_height="@dimen/largeButtonHeight"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:padding="7dp"
                android:text="START TOUR"
                android:textSize="@dimen/mediumTextSize" />

            <Button
                android:id="@+id/button_start_setup"
                android:layout_width="@dimen/weight_ratio"
                android:layout_height="@dimen/largeButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:padding="7dp"
                android:text="START SETUP"
                android:textSize="@dimen/mediumTextSize" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>