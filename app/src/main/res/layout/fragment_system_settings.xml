<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity">

    <include layout="@layout/leftnavigation" />

    <LinearLayout
        android:id="@+id/layout_rightpane"
        android:layout_width="@dimen/weight_ratio"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/rightContent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="SYSTEM SETTINGS"
            android:textSize="@dimen/contextTitleSize" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_datetime"
                    android:layout_width="@dimen/weight_ratio"
                    android:layout_height="@dimen/regularButtonHeight"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:text="SET DATE\n AND TIME"
                    android:textSize="@dimen/xxsmallTextSize" />

                <Button
                    android:id="@+id/button_wireless"
                    android:layout_width="@dimen/weight_ratio"
                    android:layout_height="@dimen/regularButtonHeight"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:text="CONNECT TO\nWIRELESS NETWORK"
                    android:textSize="@dimen/xxsmallTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_system_key"
                    android:layout_width="@dimen/weight_ratio"
                    android:layout_height="@dimen/regularButtonHeight"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:text="CHANGE\nSYSTEM KEY"
                    android:textSize="@dimen/xxsmallTextSize" />

                <Button
                    android:id="@+id/button_bluetooth"
                    android:layout_width="@dimen/weight_ratio"
                    android:layout_height="@dimen/regularButtonHeight"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:text="PAIR BLUETOOTH\nKEYBOARD"
                    android:textSize="@dimen/xxsmallTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cloud"
                    android:layout_width="@dimen/weight_ratio"
                    android:layout_height="@dimen/regularButtonHeight"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:text="MANAGE CLOUD\nUSER ACCESS"
                    android:textSize="@dimen/xxsmallTextSize" />

                <Button
                    android:id="@+id/button_av"
                    android:layout_width="@dimen/weight_ratio"
                    android:layout_height="@dimen/regularButtonHeight"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:text="CHANGE\nA/V SETTINGS"
                    android:textSize="@dimen/xxsmallTextSize" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>